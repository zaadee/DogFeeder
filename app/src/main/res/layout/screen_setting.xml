<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rmuti.project.dogfeeder.screen.ScreenSetting">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/layout_set_ip_cam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/title_set_ip_cam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ip_camera"
            android:textColor="@color/PrimaryText_Black"
            android:textSize="@dimen/FontSize20" />

        <TextView
            android:id="@+id/value_set_ip_cam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_set_ip_cam"
            android:text="192.168.1.2"
            android:textSize="@dimen/FontSize16" />


    </RelativeLayout>

    <View

        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@id/layout_set_ip_cam"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="@color/Dividers_Black" />

    <RelativeLayout
        android:id="@+id/layout_set_ip_control_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_set_ip_cam"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/title_set_ip_control_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iP_control_food"
            android:textColor="@color/PrimaryText_Black"
            android:textSize="@dimen/FontSize20" />

        <TextView
            android:id="@+id/value_set_ip_control_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_set_ip_control_food"
            android:text="192.168.1.3"
            android:textSize="@dimen/FontSize16" />

    </RelativeLayout>

    <View

        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@id/layout_set_ip_control_food"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="@color/Dividers_Black" />


</RelativeLayout>
